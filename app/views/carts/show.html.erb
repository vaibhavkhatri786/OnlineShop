<h1>Carts#show</h1>
<p>Find me in app/views/carts/show.html.erb</p>

<% @cart_items.each do |item| %>
  <h6> <%= item.product.name %> </h6>
  <h6> <%= item.product.price %> </h6>  

  <h6><%= form_for item do |f| %>
    <%= f.hidden_field :product_id, :value => item.product.id %>
    <%= f.number_field :quantity, :value => item.quantity.to_i, :min =>1 %>
    <%= f.submit "Update Cart" %>
    <%= button_to "Remove Item", cart_item_path(item), method: :delete %>
  <% end %>
  </h6>

  <h5>Subtotal: <%= item.total %></h5>
  <br>
<% end %>

<h5>Your current cart value has a subtotal of: <%= current_cart.subtotal %></h5>
